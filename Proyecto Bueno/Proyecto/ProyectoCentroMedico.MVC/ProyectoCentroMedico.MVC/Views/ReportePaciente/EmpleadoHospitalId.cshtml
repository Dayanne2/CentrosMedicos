@model EmpleadoHospitalViewModel
@{
    ViewData["Title"] = "EmpleadoHospitalId";
}

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h1>Reporte de Empleados por Hospital</h1>
                        <form autocomplete="off" method="post" target="_blank">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="hospi_Id" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <select asp-for="hospi_Id" class="form-control" asp-items="Model.ListadoHospitales">
                                        <option>Seleccione el Hospital</option>
                                    </select>
                                    <span asp-validation-for="hospi_Id" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Mostrar Reporte" class="btn btn-success" target="_blank" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

