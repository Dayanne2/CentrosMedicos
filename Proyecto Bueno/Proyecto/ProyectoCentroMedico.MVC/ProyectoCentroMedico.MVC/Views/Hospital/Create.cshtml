
@model HospitalesViewModel
@{
    ViewData["Title"] = "Create";
}


<h1>Insertar Hospital</h1>
<form autocomplete="off" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   


    <div class="form-group">
        <label asp-for="hospi_Nombre" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="text" asp-for="hospi_Nombre" class="form-control" maxlength="150" />
            <span asp-validation-for="hospi_Nombre" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="hospi_Telefono" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="text" asp-for="hospi_Telefono" class="form-control" maxlength="150" />
            <span asp-validation-for="hospi_Telefono" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
            <a class="btn btn-primary" asp-area="" asp-controller="Sala" asp-action="PrintUltId" target="_blank">Ultimo Reporte</a>
            <a class="btn btn-primary" asp-area="" asp-controller="Sala" asp-action="Print" target="_blank">Mostrar Reporte</a>
        </div>
    </div>
</form>
