@model EnfermosViewModel
@{
    ViewData["Title"] = "Create";
}


<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h1>Insertar Enfermo</h1>
                        <form autocomplete="off" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                            <div class="form-group">
                                <label asp-for="enfer_Apellido" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input type="text" asp-for="enfer_Apellido" class="form-control" maxlength="150" />
                                    <span asp-validation-for="enfer_Apellido" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="enfer_Direccion" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input type="text" asp-for="enfer_Direccion" class="form-control" maxlength="150" />
                                    <span asp-validation-for="enfer_Direccion" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="enfer_FechaNac" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input type="text" asp-for="enfer_FechaNac" class="form-control" maxlength="150" />
                                    <span asp-validation-for="enfer_FechaNac" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="enfer_NSS" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input type="text" asp-for="enfer_NSS" class="form-control" maxlength="150" />
                                    <span asp-validation-for="enfer_NSS" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group">
                                <label asp-for="planti_EmpleadoId" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <select asp-for="planti_EmpleadoId" class="form-control" asp-items="Model.ListadoEmp">
                                        <option>Seleccione </option>
                                    </select>
                                    <span asp-validation-for="planti_EmpleadoId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                    <a class="btn btn-primary" asp-area="" asp-controller="Enfermo" asp-action="PrintUltId" target="_blank">Ultimo Reporte</a>
                                    <a class="btn btn-primary" asp-area="" asp-controller="Enfermo" asp-action="Print" target="_blank">Mostrar Reporte</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
